{
  "name": "botify-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "bot": "pnpm --filter botify-bot dev",
    "dashboard": "pnpm --filter botify-dashboard dev",
    "db:generate": "pnpm --filter @botify/database db:generate",
    "db:push": "pnpm --filter @botify/database db:push",
    "db:studio": "pnpm --filter @botify/database db:studio",
    "start": "concurrently \"pnpm run bot\" \"pnpm run dashboard\" --names \"BOT,DASH\" --prefix-colors \"blue,magenta\""
  },
  "devDependencies": {
    "turbo": "latest",
    "prettier": "latest",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.4",
    "concurrently": "^8.2.2"
  },
  "packageManager": "pnpm@9.0.0"
}